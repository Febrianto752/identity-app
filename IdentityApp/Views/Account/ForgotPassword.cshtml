@model ForgotPasswordVM
<h1 class="text-center my-3">Forgot Password</h1>

<div class="row justify-content-center">
    <div class="col-sm-8 p-4 shadow-lg rounded">
        <form method="post" asp-controller="Account" asp-action="ForgotPassword">
            <p class="text-center"></p>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>         

            <button class="btn btn-primary mt-4 px-4">Submit</button>
        </form>

        <a asp-controller="Account" asp-action="Login" >Go to Login</a>

    </div>
</div>