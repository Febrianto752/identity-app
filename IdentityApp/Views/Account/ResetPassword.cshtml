@model ResetPasswordVM

<h1 class="text-center my-3">Reset Password Form</h1>

<div class="row justify-content-center">
    <div class="col-sm-8 p-4 shadow-lg rounded">
        <form method="post" asp-controller="Account" asp-action="ResetPassword" asp-route-Code="@Model.Code">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Code" hidden />
            <input asp-for="Email" hidden />

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input asp-for="Password" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>

            <button class="btn btn-primary mt-4 px-4">Change Password</button>
        </form>
        <p class="mt-4">Already account?<a asp-controller="Account" asp-action="Login"> Login</a></p>

    </div>
</div>
