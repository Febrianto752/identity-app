@model RegisterVM 

<h1 class="text-center my-3">Register Form</h1>

<div class="row justify-content-center">
    <div class="col-sm-8 p-4 shadow-lg rounded">
        <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <p class="text-center">Create a new account</p>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="RoleSelected" class="form-label"></label>
                <div class="col-md-10">
                    <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                        <option disabled selected>--Select Role--</option>
                    </select>
                </div>
            </div>
            
            <button class="btn btn-primary mt-4 px-4">Register</button>
        </form>
        <p class="mt-4">Already account?<a asp-controller="Account" asp-action="Login"> Login</a></p>
              
    </div>
</div>
